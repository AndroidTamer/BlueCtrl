<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/view_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout style="@style/help_dialog">

        <TextView style="@style/help_title"
                  android:text="@string/help_mouse_control" />
        <TableLayout style="@style/table"
                     android:shrinkColumns="1"
                     android:stretchColumns="1">
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_move_pointer_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_move_pointer_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_button1_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_button1_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_button2_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_button2_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_button3_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_button3_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_button4_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_button4_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_button5_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_button5_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_scroll_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_scroll_how" />
            </TableRow>
            <TableRow style="@style/table_row">
                <TextView style="@style/help_table_cell_action"
                          android:text="@string/help_mctrl_drag_action" />
                <TextView style="@style/help_table_cell_how"
                          android:text="@string/help_mctrl_drag_how" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>